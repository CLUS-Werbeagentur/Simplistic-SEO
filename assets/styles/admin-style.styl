.clear
  clear both

.sseo-settings-wrapper
  max-width 1200px

.sseo-settings-left
  float left
  width 50%

.sseo-settings-right
  float right
  width 42%
  margin-top 39px

.sseo-settings-input-wrapper
  max-width 600px
  margin-bottom 25px

  input, textarea
    width 100%
    resize none

.sseo-settings-input-label
  float left
  width 85%
  margin-bottom 8px

.length-info
  display inline-block
  float right
  width 15%
  text-align right
  font-size 12px

.sseo-settings-table
  width 100%
  max-width 300px
  border-spacing 0 10px
  border-collapse separate
  border none
  text-align left

#sseo-meta-editor
  float left
  width 50%

#sseo-preview
  float right
  width 48%

#sseo-title, #sseo-metadescription
  width 100%
  padding 5px
  line-height 1.5
  resize none

#sseo-google-preview-wrapper
  border 1px solid #eee
  box-shadow 0 1px 1px rgba(0,0,0,.04)
  padding 24px 20px
  max-width 600px

#sseo-preview-title, #sseo-preview-url, #sseo-preview-metadescription
  display block
  color #1a0dab
  font-family arial, sans-serif
  font-size 18px
  font-weight 400
  line-height 21.6px
  text-decoration none
  white-space break-word

#sseo-preview-url
  color #006621
  font-size 14px
  line-height 16px
  white-space nowrap
  margin 2px 0

#sseo-preview-metadescription
  color #545454
  font-size 13px
  line-height 18.2px

#sseo-preview-url-arrow
  position relative
  top 12px
  width 0
  height 0
  margin-left 5px
  border-left 5px solid transparent
  border-right 5px solid transparent
  border-top 5px solid #006621
